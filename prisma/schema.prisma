generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Transaction {
  id        Int      @id @default(autoincrement())
  amount    Int
  comment   String
  type      String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Expense {
  id        Int      @id @default(autoincrement())
  amount    Int
  name      String
  category  String
  comment   String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
